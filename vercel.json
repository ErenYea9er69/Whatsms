{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "buildCommand": "cd server && npm install && npx prisma generate && cd ../client && npm install --include=dev && npm run build",
    "outputDirectory": "client/dist",
    "env": {
        "NODE_ENV": "production"
    }
}