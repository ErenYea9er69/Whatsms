# WhatsSMS Production Environment Variables for Plesk
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3000

# Client URL (your Plesk domain - used for CORS)
CLIENT_URL=https://iconflow.tn

# Database (Neon PostgreSQL - same as your current database)
DATABASE_URL=postgres://user:password@ep-your-project.region.aws.neon.tech/neondb?sslmode=require

# JWT Secret for Authentication (use a strong, unique secret)
JWT_SECRET=your_secure_jwt_secret_here

# PayPal Configuration (Optional)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live

# AI Configuration
LONGCAT_API_KEY=your_longcat_api_key
LONGCAT_BASE_URL=https://api.longcat.chat/openai/v1
